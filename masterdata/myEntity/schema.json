{
  "$schema": "http://json-schema.org/schema#",
  "name": "candidatos",
  "title": "info de candidatos",
  "type": "object",
  "properties": {
    "nombre": {
      "type": "string"
    },
    "apellidos": {
      "type":"string"
    },
    "poblacion": {
      "type":"string"
    },
    "provincia": {
      "type":"string"
    },
    "codigo_postal": {
      "type":"string"
    },
    "tel1": {
      "type": "number"
    },
    "tel2": {
      "type": "number"
    },
    "email":{
      "type":"string"
    }
  },
  "required": [
    "nombre",
    "email"
  ],
  "v-indexed": [
    "email"
  ],
  "v-cache": false,
  "v-triggers": [
    {
      "name": "Candidatos data",
      "active": true,
      "condition": "sendEmail=true",
      "action":{
        "type": "t-email",
        "template": "dataCandidate",
        "body":{
          "nombre": "{!nombre} + ' ' + {!apellidos}",
          "email": "{!email}",
          "telefono": "{!tel1}"
        }
      }
    }
  ]
}
